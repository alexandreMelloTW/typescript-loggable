{
    "compilerOptions": {
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": [
        "es2018"
      ],
      "moduleResolution": "node",
      "module": "commonjs",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "target": "es2018",
      "outDir": "dist"
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }